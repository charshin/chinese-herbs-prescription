datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

generator client {
  provider = "prisma-client-js"
}

enum Gender {
  male
  female
}

model Patient {
  id         Int      @id @default(autoincrement())
  fullname   String
  dob        DateTime @db.Date
  email      String
  phone      String
  gender     Gender
  occupation String?
  height     Int
  weight     Int
  systolic   Int
  diastolic  Int
  heartRate  Int
  address    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Herb {
  name        String   @id @db.VarChar(30)
  photo       String?
  traits      String[] @default([])
  price       Int
  displayedIn Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model I18n {
  locale   String @id
  messages Json
}
